

@model BookListMVC.Models.Book

<br />
<h2 class="text-info">@(Model.Id == 0 ? "Add" : "Update") Book</h2>

<br />

<div class="border container" style="padding:30px">
    <form method="post">
        @if (Model.Id != 0)
        {
            <input type="hidden" asp-for="Id" />
        }
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="row form-group">
            <div class="col-2">
                <label asp-for="Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-2">
                <label asp-for="Author"></label>
            </div>
            <div class="col-6">
                <input asp-for="Author" class="form-control" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-2">
                <label asp-for="ISBN"></label>
            </div>
            <div class="col-6">
                <input asp-for="ISBN" class="form-control" />
            </div>
        </div>
        <div class="row form-group">
            <div class="col-2">
                <label asp-for="Price"></label>
            </div>
            <div class="col-6">
                <input asp-for="Price" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3 offset-2">
                <button type="submit" class="btn btn-primary text-white form-control">
                    @(Model.Id == 0 ? "Add" : "Update") Book
                </button> </button>
            </div>
            <div class="col-3">
                <a asp-action="Index" asp-controller="Books" class="btn btn-info text-white form-control">Abort</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}